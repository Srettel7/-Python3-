#this is the timer that will tell it how long it will take
def countdownclock():
    import time


    def countdown(count):
        while count:
            mins, secs = divmod(count, 60)
            timer = "{:02d}:{:02d}".format(mins, secs)
            print(timer, end="\r")
            time.sleep(1)
            count -= 1
        print("Downloaded!")


    count = ("5")


    countdown(int(count))

#pip install pytube | if you haven't already, if you have don't worry about it
from pytube import YouTube
URL =input("Whats The Video URL?")
#The URL
video = YouTube(URL)
video_streams = video.streams.filter(file_extension='mp4').get_by_itag(18)
#                                      what you want it to be called
video_streams.download(filename =input("What Do you want it to be called?") ",
	output_path = ("video_path")
#The Path / Where it will be Downloading
print("It is Downloading!")
countdownclock()
print("github.com/Srettel7")




