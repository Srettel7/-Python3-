def Fx():
    Q1 =input("Do you need the guidebook?y or n")
    if Q1 == ("y"):
        print("GUIDEBOOK")
        print("So all you do is enter either ft to m or m to ft ft stands for Feet m stands for meters")
    print("#################################")
    print("CODECREATION (METER AND FEET CALCULATOR)")
    print("#################################")
    input1 = input('ft to m or m to ft? ')
    #
    if input1 == 'ft to m':
        feet = float(input('enter ft: '))
        meter = feet *0.3048
        print(meter)

    if input1 == 'm to ft':
        meter = float(input('enter m: '))
        feet = meter/0.3048
        print(feet)
    print("--------------------------")
    print("CODECREATIONS, ALL RIGHTS RESERVED")
    print("--------------------------")
def F1():
    pounds =float(input('Enter weight in Pounds(Lbs) to Convert into Kilograms:'))
    kilo_grams = pounds * 0.453592
    print(pounds,' Pounds (Lbs) are equal to', kilo_grams,'Kilograms (Kgs)')
    #Outa
def F2():
    kilo_grams =float(input('Enter weight in kg  to Convert into lbs:'))
    pounds = kilo_grams / 0.453592
    print(kilo_grams,' kilograms(kg) are equal to', pounds,'Pounds(lbs)')
