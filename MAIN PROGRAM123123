    print("################################################")
    print("CODECREATIONS速 (BMI CALCULATOR [KG EDTION]")
    print("################################################")
    name =input("whats your name?")
    print(name)
    print("alright next one")
    weight_kg =float(input("whats your weight in kilo grams?"))
    print(weight_kg)
    print("Correct? Alright next one")
    height_m =float(input("whats your height in meters?")) 
    print(height_m)
    bmi = weight_kg / (height_m ** 2)
    print("bmi: ")
    print(bmi)
    if bmi > 25:
        print(name)
        print("is overweight")
    elif bmi < 25:
        print(name)
        print("is not overweight")
    else:
        print(name)
        print("sorry for the promblem we will get it fixed as soon as possible")
    print("********************************************")
    print("CODECREATIONS速, ALL RIGHTS RESERVED")
    print("********************************************")
